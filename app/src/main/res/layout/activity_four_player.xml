<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dren.cmput301assign1.Four_player"
    android:weightSum="1">

    <Button
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:text="1"
        android:textSize="60dp"
        android:id="@+id/button3_1"
        android:layout_alignParentStart="true"
        android:onClick="button3_1" />

    <Button
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:textSize="60dp"
        android:text="2"
        android:layout_toRightOf="@+id/button3_1"
        android:id="@+id/button3_2"
        android:layout_above="@+id/button3_4"
        android:layout_alignParentEnd="true"
        android:onClick="button3_2" />

    <Button
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:text="3"
        android:textSize="60dp"
        android:id="@+id/button3_3"
        android:layout_below="@+id/button3_1"
        android:layout_toStartOf="@+id/button3_2"
        android:onClick="button3_3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:text="4"
        android:textSize="60dp"
        android:id="@+id/button3_4"
        android:layout_alignTop="@+id/button3_3"
        android:layout_alignEnd="@+id/button3_2"
        android:layout_alignStart="@+id/button3_2"
        android:onClick="button3_4" />
</RelativeLayout>
