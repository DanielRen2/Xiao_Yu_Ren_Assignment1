<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dren.cmput301assign1.MultiStats">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Two Player Winner Information"
        android:id="@+id/player_display" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:id="@+id/MultiList"
/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Two Player stats"
        android:id="@+id/button2p"
        android:layout_gravity="center_horizontal"
        android:onClick="button2p" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Three player stats"
        android:id="@+id/button3p"
        android:layout_gravity="center_horizontal"
        android:onClick="button3p" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Four player stats"
        android:id="@+id/button4p"
        android:layout_gravity="center_horizontal"
        android:onClick="button4p" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Stats"
        android:id="@+id/clearStatMulti"
        android:layout_gravity="center_horizontal"
        android:onClick="clearStatMulti" />

</LinearLayout>
